datasource db {
  provider = "postgresql" // change to mysql/sqlite if needed
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model Menu {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
